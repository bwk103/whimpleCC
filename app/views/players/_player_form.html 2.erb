<%= form_for @player do |f| %>
  <%= f.label :first_name, 'First Name:' %>
  <%= f.text_field :first_name %>
  <%= f.label :surname, 'Surname:' %>
  <%= f.text_field :surname %>
  <%= f.label :email, 'Email:' %>
  <%= f.email_field :email %>
  <%= f.label :team, 'Team:' %>
  <%= f.number_field :team %>
  <%= f.submit yield(:btn_text) %>
<% end %>
