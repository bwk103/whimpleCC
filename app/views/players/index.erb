<% provide(:title, 'Players') %>

  <div id="players-index">
  <section class="title">
    <div class="description">
      <h1 class="page-title">Players</h1>
    </div>
  </section>
  <%= render 'shared/flash' %>
  <% if @players %>
    <div class="player-list">
      <% @players.each do | player | %>
        <%= render 'player', { player: player } %>
      <% end %>
    </div>
  <% end %>
</div>
