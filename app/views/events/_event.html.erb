<div class="event">
  <div class="event-image">
    <a href="<%= event_path(event) %>"><img src="http://via.placeholder.com/150x150" alt="placeholder"></a>
  </div>
  <div class="event-details">
    <a href="<%= event_path(event) %>"><h4><%= event.name %></h4></a>
    <p><%= formatted_date(event.date) %></p>
    <p><%= event.location %></p>
  </div>
</div>
