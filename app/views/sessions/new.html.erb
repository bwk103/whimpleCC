<div id="login" class="admin-only admin-form">
  <div class="admin-navbar">
  </div>
  <section class="form">
    <%= form_for @user, url: '/login' do |f| %>
    <div class="form-header">
      <h2>User Login</h2>
    </div>
    <div class="form-group">
      <%= f.label :username, 'Username:' %>
      <%= f.text_field :username, autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Password:'%>
      <%= f.password_field :password %>
    </div>
    <div class="form-group">
        <%= f.submit 'Login', class: 'btn' %>
      </div>
    <% end %>
    <p>Not registered? <%= link_to 'Signup here', new_user_url %></p>
  </section>
</div>
